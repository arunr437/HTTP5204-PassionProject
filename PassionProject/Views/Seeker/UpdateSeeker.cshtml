@model PassionProject.Models.JobSeeker
@{
    ViewBag.Title = "UpdateSeeker";
}

@*Below code is used to display information about the Seeker. These can be updated and submitted by the user*@
<h2>UpdateSeeker</h2>
<form method="post" href="/Seeker/AddSeekers">
    <div class="form-group">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Job Name:</label>
            <input class="form-control" id="Description" value="@Model.name" name="name" type="text" />
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email ID:</label>
            <input class="form-control" id="emailId" value="@Model.emailId" name="emailId" type="text" />
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Location:</label>
            <input class="form-control" id="location" value="@Model.location" name="location" type="text" />
        </div>
    </div>
    <!-- Link styled as a button to go back to the list page-->
    <a class="btn btn-default" href="/Seeker/ListSeekers">Back</a>
    <!-- Button to submit the form-->
    <input type="submit" class="btn btn-primary" value="Update">
</form>

