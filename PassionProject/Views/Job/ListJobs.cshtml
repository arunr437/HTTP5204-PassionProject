@model List<PassionProject.Models.JobPost>
@{
    ViewBag.Title = "ListJobs";
}

    <div class="container well mt">

        @*Below code will create a search box with a button which will be used to search for Page Title*@
        <form action="/Job/ListJobs" method="get">
            <input type="text" id="searchKey" name="searchKey" />
            <button class="btn btn-primary">
                <span class="glyphicon glyphicon-search"></span> Find Jobs
            </button>
        </form>

        @*Below code will display the list of jobs and have buttons for each record that can be used to Update and Delete*@
        <div class="h2">Manage Jobs</div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Company</th>
                    <th>Skill</th>
                    <th>Location</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var job in Model)
                    {
                        <tr>
                            <td><a href="/Job/ShowJob/@job.jobId">@job.name</a></td>
                            <td>@job.company</td>
                            <td>@job.skill</td>
                            <td>@job.location</td>
                            <td>
                                <a href="/Job/UpdateJob/@job.jobId" class="btn btn-warning">Update</a>
                                <a href="/Job/DeleteJob/@job.jobId" onclick="return validate();" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        @*Link to create a new Job post. Link will appear like a button due to bootstrap styling*@
        <div>
            <a class="btn btn-primary" href="/Job/AddJobs/" id="createBtn">Add Job </a>
        </div>
    </div>

